urxvt*scrollBar:	false
urxvt*saveLines:	4000
urxvt*internalBorder:	6
urxvt*cursorBlink:	true

! disable the stupid ctrl+shift 'feature'
urxvt.iso14755: false
urxvt.iso14755_52: false

#Xft.dpi: 72
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: false
#Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault

# transparency under wayland:
urxvt*depth: 32
urxvt*background:	rgba:0000/0000/0200/c800
#urxvt*background:	#000000
urxvt*foreground:	#FFFFFF
urxvt*shading: 20
urxvt*inheritPixmap: true

#urxvt*font:xft:Misc Fixed:style=SemiCondensed:size=10
#urxvt*font:xft:Inconsolata for Powerline:pixelsize=12
#URxvt*font: xft:Misc Fixed:style=Semicondensed:pixelsize=13,xft:Inconsolata for Powerline:weight=Normal
#urxvt*font: xft:Misc Fixed:style=Semicondensed:size=10:autohint=false:antialias=false
#urxvt*boldFont: xft:Roboto Mono for Powerline:weight=Bold
urxvt*boldFont: xft:Roboto Mono:weight=Bold
#urxvt*font: xft:Misc Fixed:style=Semicondensed:pixelsize=13:autohint=false:antialias=false,xft:Inconsolata for Powerline:pixelsize=13:autohint=true:antialias=true
urxvt*font: xft:Misc Fixed-Me:style=Semicondensed:pixelsize=13:autohint=false:antialias=false
#,xft:Inconsolata for Powerline:pixelsize=13:autohint=true:antialias=true

# add new ways to send escape
urxvt.keysym.Control-semicolon: \033
urxvt.keysym.Control-apostrophe: \033

